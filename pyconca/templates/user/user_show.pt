<div metal:use-macro="layout">
    <div metal:fill-slot="content">

        <div class="row-fluid">
            <div class="span12">
                <br>
                <h1><a tal:attributes="href index_url">users</a> / <span tal:replace="user.username"></h1>
                <hr>

                <strong>Name:</strong>
                <span tal:replace="user.first_name">
                <span tal:replace="user.last_name">

                <br>
                <strong>Email Address:</strong>
                <span tal:replace="user.email">

                <br>
                <strong>Username:</strong>
                <span tal:replace="user.username">

                <br>
                <br>
                <form action="" method="">
                    <input class="btn btn-primary" type="submit" value="Edit" 
                           onclick="this.form.action='${user.update_url}';this.form.method='GET';"/>
                    <input class="btn" type="submit" value="Delete" 
                           onclick="this.form.action='${user.delete_url}';this.form.method='POST';"/>
                </form>
            </div>
        </div>

    </div><!-- content slot -->
</div><!-- layout template -->
